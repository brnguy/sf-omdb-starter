<h1><%=  movie.Title %></h1>
<p><%=  movie.Year %></p>
<h4><%=  movie.Rated %></h4>
<h6><%=  movie.Genre %></h6>
<p><%=  movie.Director %></p>

<img src="<%= movie.Poster %>" />

<form action="/faves" method="post">
    <input hidden name="title" value="<%= movie.Title %>" />
    <input hidden name="imdbId" value="<%= movie.imdbID %>" />

    <input type="submit" value="fave this movie">
</form>